<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@*common:style/Cyngn.AppBar</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:statusBarColor">@*common:color/theme_statusbar</item>
        <item name="android:colorEdgeEffect">@*common:color/theme_edge</item>
    </style>

    <style name="Theme.Settings" parent="@style/Theme.SettingsBase" />

    <style name="Theme.SubSettings" parent="@style/Theme.SettingsBase" />

    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:actionBarStyle">@*common:style/Cyngn.AppBar</item>
        <item name="android:actionBarTheme">@*common:style/Cyngn.AppBar.Theme</item>
        <item name="android:actionBarWidgetTheme">@null</item>
        <item name="android:colorBackground">@*common:color/theme_background</item>
        <item name="android:colorBackgroundCacheHint">@*common:color/theme_primary</item>
        <item name="android:colorAccent">@*common:color/theme_primary</item>
        <item name="android:colorEdgeEffect">@*common:color/theme_edge</item>
        <item name="android:statusBarColor">@*common:color/theme_statusbar</item>
        <item name="preferenceBackgroundColor">@drawable/preference_background</item>
    </style>

    <style name="settingSeparator">
        <item name="android:background">@*common:color/theme_background</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">8.0dip</item>
    </style>

    <style name="wifi_item_content">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textColor">@*common:color/theme_white</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Theme.Light.WifiDialog" parent="@*android:style/Theme.Material.Dialog.Alert" />

    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
    </style>

</resources>