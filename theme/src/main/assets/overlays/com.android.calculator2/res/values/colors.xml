<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default background color for the status bar. -->
    <color name="calculator_accent_color">@*common:color/theme_statusbar</color>

    <!-- Statusbar color -->
    <color name="calculator_statusbar_color">@*common:color/theme_statusbar</color>

    <!-- Color to indicate an error has occured. -->
    <color name="calculator_error_color">#C2185B</color>

    <!-- Background color of the calculator display. -->
    <color name="display_background_color">@*common:color/theme_statusbar</color>

    <!-- Text color for the formula in the calculator display. -->
    <color name="display_formula_text_color">#ffffffff</color>

    <!-- Text color for the result in the calculator display. -->
    <color name="display_result_text_color">#ffffffff</color>

    <!-- Lighter color for exponent while scrolling. -->
    <color name="display_result_exponent_text_color">#ffffffff</color>

    <!-- Background color for the numeric pad. -->
    <color name="pad_numeric_background_color">@*common:color/theme_dark</color>

    <!-- Background color for the operator pad. -->
    <color name="pad_operator_background_color">@*common:color/theme_dark</color>

    <!-- Background color for the advanced pad. -->
    <color name="pad_advanced_background_color">@*common:color/theme_dark</color>

    <!-- Text color for a button in a pad. -->
    <color name="pad_button_text_color">@*android:color/primary_text_default_material_dark</color>

    <!-- Text color for a button in the advanced pad. -->
    <color name="pad_button_advanced_text_color">@*android:color/secondary_text_default_material_dark</color>

    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_ripple_color">@*common:color/theme_primary</color>

    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_advanced_ripple_color">@*common:color/theme_primary</color>
</resources>
